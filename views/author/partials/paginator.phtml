            <a href="<?php echo $paginator->getBaseUrl(); ?>?page=<?php echo $i; ?>"> <?php echo $i; ?>
                <?php if($i == $paginator->getCurrentPage()): ?>
                <span class="sr-only">(current)</span>
                <?php endif; ?>
            </a>
        </li>
    <?php endfor; ?>
    <li 
        <?php if($paginator->getCurrentPage()+1 > $paginator->getNumOfPages()): ?>
        class="disabled"
        <?php endif; ?>
        ><a href="<?php echo $paginator->getBaseUrl(); ?>?page=<?php echo  $paginator->getCurrentPage()+1 > $paginator->getNumOfPages()? $paginator->getCurrentPage(): $paginator->getCurrentPage()+1; ?>" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
  </ul>
</nav>
