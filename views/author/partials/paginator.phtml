<?php $paginator = $this->response->getData()['paginator'];   ?>
<nav>
  <ul class="pagination pagination-lg">
    
     <li <?php if($paginator->getCurrentPage()-1 < 1): ?>
        class="disabled"
        <?php endif; ?>><a href="<?php echo $paginator->getBaseUrl(); ?>?page=<?php echo $paginator->getCurrentPage()-1 >= 1 ?$paginator->getCurrentPage()-1: $paginator->getCurrentPage() ; ?>" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
